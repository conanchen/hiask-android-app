<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ditto.feature.login">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="org.ditto.feature.login.LoginActivity"
            android:label="@string/login_activity_name">

        </activity>
        <activity
            android:name="org.ditto.feature.login.RegisterActivity"
            android:label="@string/register_activity_name">

        </activity>
        <activity
            android:name="org.ditto.feature.login.ForgetpasswordActivity"
            android:label="@string/forgetpassword_activity_name">

        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="behind"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1106139510" />
                <!--应用的AppId要相同-->
            </intent-filter>
        </activity>

    </application>

</manifest>